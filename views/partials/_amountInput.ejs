<div class="relative mb-4">
  <label for="<%= id %>" class="block font-medium text-slate-800 cursor-pointer">
    <%= label %> <% if (required) { %><span class="text-red-500">*</span><% } %>
  </label>

  <% if (quickSelect && quickSelect.length) { %>
  <div class="flex flex-wrap gap-2 my-2">
    <% quickSelect.forEach(value => { 
           const display = typeof value === 'number' ? `$${value}` : 'Max';
           const actualValue = value === 'max' ? maxValue : value;
      %>
    <button type="button" class="hover:bg-accentGreen px-4 py-2 border border-black/10 rounded-md font-medium hover:text-white text-xs md:text-sm xl:text-base transition" onclick="document.getElementById('<%= id %>').value = '<%= actualValue %>'">
      <%= display %>
    </button>
    <% }) %>
  </div>
  <% } %>

  <input type="<%= type %>" id="<%= id %>" name="<%= name %>" class="mt-1 px-4 py-3 pr-10 border focus:border-accentGreen border-black/10 rounded-md focus:outline-none w-full" placeholder="<%= placeholder || '' %>" <%= required ? 'required' : '' %> />

  <% if (type === 'password') { %>
  <span class="top-[30%] md:top-[35%] xl:top-[40%] right-0 absolute inset-y-0 flex items-center pr-3 text-accentGreen text-lg md:text-xl xl:text-2xl cursor-pointer" onclick="togglePasswordVisibility('<%= id %>')">
    <i id="<%= id %>-icon" class="ph-duotone ph-eye"></i>
  </span>
  <% } %>
</div>